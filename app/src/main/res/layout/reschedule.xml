<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".slotbook.reschedule">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/side_nav_bar"
        android:orientation="horizontal"
        android:padding="15dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_weight="5"
            android:text="Reschedule Your Appointment "
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/input_appoin_name"
            android:drawablePadding="10dp"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_person_outline_black_24dp"
            android:layout_width="match_parent"
            android:textColor="#000000"
            android:textColorHint="#696969"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Name"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp">

            <ImageButton
                android:id="@+id/dob_calender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:src="@drawable/ic_date_range_black_24dp"
                android:text="D.O.B"
                android:layout_marginTop="@dimen/fui_body_padding_bottom" />
            <TextView
                android:id="@+id/input_dob"
                android:drawablePadding="10dp"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:textColor="#000000"
                android:textColorHint="#696969"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:textSize="20sp"
                android:ems="10"
                android:hint="Date Of Birth"/>


        </LinearLayout>


        <EditText
            android:id="@+id/input_appoin_phone"
            android:drawablePadding="10dp"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_phone_black_24dp"
            android:layout_width="match_parent"
            android:textColor="#000000"
            android:textColorHint="#696969"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:hint="Phone Number"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="10dp">





        <ImageButton
            android:id="@+id/apoin_date_calender2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:src="@drawable/ic_date_range_black_24dp"
            android:text="D.O.B"
            android:layout_marginTop="@dimen/fui_body_padding_bottom" />





        <TextView
            android:id="@+id/appoin_date2"
            android:drawablePadding="10dp"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:textColorHint="#696969"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:hint=" Appointment Date"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="24dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text=" Old Slot"
            android:layout_marginStart="10dp"
            android:textSize="20sp"
            android:textColor="#000"
            />

        <!-- Spinner Dropdown -->
        <Spinner
            android:id="@+id/spinner3"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="#000"
            android:focusable="true"
            android:layout_margin="10dp"
            android:backgroundTint="#000"
            android:textColor="#FFFF"
            style="@style/Base.Widget.AppCompat.DropDownItem.Spinner"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="24dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000"
            android:text="Time Interval"
            android:padding="8dip"
            android:layout_marginStart="12dp"
            android:layout_margin="10dp"/>

        <!-- Spinner Dropdown -->

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:entries="@array/time_interval"
            android:focusable="true"
            android:prompt="@string/time_prompt"
            android:layout_margin="10dp"
            style="@style/Base.Widget.AppCompat.DropDownItem.Spinner"
            android:backgroundTint="#000"
            android:padding="20dip"
            />
    </LinearLayout>
    <!-- Select Label -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="24dp">
        <TextView
            android:id="@+id/text99"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text=" New Slot"
            android:layout_marginStart="12dp"
            android:textSize="20sp"
            android:textColor="#000"
            />

        <!-- Spinner Dropdown -->
        <Spinner
            android:id="@+id/spinner2"
            style="@style/Base.Widget.AppCompat.DropDownItem.Spinner"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#000"
            android:backgroundTint="#000"
            android:focusable="true"
            android:padding="15dp"
            android:textColor="#FFFF"

            />
    </LinearLayout>
    <Button
        android:id="@+id/book_appoinment_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonstylepink"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="Reschedule Appointment"
        android:drawableRight="@drawable/ic_send_black_24dp"
        android:textColor="#fff"/>

</LinearLayout>