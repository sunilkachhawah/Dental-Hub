<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff"
    android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/side_nav_bar">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="arial"
                    android:text="Welcome to DentalHub"
                    android:textColor="#fff"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="arial"
                    android:text="Book an appointment of our Dental Doctor  for advice , diagnosis and treatment ."
                    android:textColor="#fff"

                    android:textSize="30sp" />
    </LinearLayout>
<LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/doc1"
        android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/doc_image_button_background"
        android:src="@drawable/doc4" />

    <Button
        android:id="@+id/doc_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:background="@drawable/buttonstylepink"
        android:drawableRight="@drawable/ic_send_black_24dp"
        android:text="Book Your Appointment"
        android:textColor="#fff" />

    <Button
        android:id="@+id/reschedule_button"
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonstylepink"
        android:drawableRight="@drawable/ic_send_black_24dp"
        android:text="Reschedule Your Appointment" />

</LinearLayout>

</LinearLayout>
