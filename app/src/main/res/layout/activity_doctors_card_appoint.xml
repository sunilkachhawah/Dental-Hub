<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="  #f5b7b1   "
        app:cardCornerRadius="2dp"
        app:cardElevation="0.7dp"
        android:layout_margin="1dp"
        app:cardMaxElevation="1dp"
        app:cardPreventCornerOverlap="true">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date :"
                android:textSize="17sp" />

            <TextView
                android:layout_toRightOf="@+id/date_text"
                android:textColor="#000"
                android:textSize="17sp"
                android:id="@+id/datedoc"
                android:layout_marginStart="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />


            <TextView
                android:textSize="17sp"

                android:id="@+id/time_text"
                android:layout_below="@+id/date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time :"/>

            <TextView
                android:textColor="#000"
                android:textSize="17sp"
                android:id="@+id/timedoc"
                android:layout_below="@+id/date_text"
                android:layout_toRightOf="@+id/time_text"
                android:layout_marginStart="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/name_text"
                android:layout_below="@+id/time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name :"
                android:textSize="17sp"
                />

            <TextView
                android:textColor="#000"
                android:textSize="17sp"
                android:id="@+id/namedoc"
                android:layout_below="@+id/time_text"
                android:layout_toRightOf="@+id/name_text"
                android:layout_marginStart="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/phone_text"
                android:layout_below="@+id/name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone : "
                android:textSize="17sp"
                />

            <TextView
                android:textColor="#000"
                android:textSize="17sp"
                android:layout_below="@+id/name_text"
                android:layout_toRightOf="@+id/phone_text"
                android:id="@+id/phonedoc"
                android:layout_marginStart="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/dob_text"
                android:layout_below="@+id/phone_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D.O.B :"
                android:textSize="17sp"
                />


            <TextView
                android:textColor="#000"
                android:textSize="17sp"
                android:id="@+id/dobdoc"
                android:layout_below="@+id/phone_text"
                android:layout_toRightOf="@+id/dob_text"
                android:layout_marginStart="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>